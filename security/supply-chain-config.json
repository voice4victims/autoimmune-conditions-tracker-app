{
    "supplyChainSecurity": {
        "version": "1.0.0",
        "lastUpdated": "2024-12-11",
        "configuration": {
            "vulnerabilityScanning": {
                "enabled": true,
                "schedule": "daily",
                "sources": [
                    "npm-audit",
                    "github-advisory-database",
                    "snyk",
                    "ossindex"
                ],
                "severityThreshold": "medium",
                "autoFix": {
                    "enabled": true,
                    "maxSeverity": "high",
                    "excludePackages": []
                }
            },
            "dependencyManagement": {
                "lockFileValidation": true,
                "allowedLicenses": [
                    "MIT",
                    "Apache-2.0",
                    "BSD-2-Clause",
                    "BSD-3-Clause",
                    "ISC"
                ],
                "blockedPackages": [
                    "event-stream",
                    "flatmap-stream",
                    "eslint-scope"
                ],
                "criticalDependencies": [
                    {
                        "name": "firebase",
                        "reason": "Authentication and data storage",
                        "monitoring": "enhanced",
                        "updatePolicy": "manual-review"
                    },
                    {
                        "name": "crypto-js",
                        "reason": "Client-side encryption",
                        "monitoring": "enhanced",
                        "updatePolicy": "manual-review"
                    },
                    {
                        "name": "zod",
                        "reason": "Input validation",
                        "monitoring": "enhanced",
                        "updatePolicy": "automatic-patch"
                    }
                ]
            },
            "buildSecurity": {
                "integrityChecks": true,
                "reproducibleBuilds": true,
                "signedArtifacts": false,
                "buildEnvironment": {
                    "isolated": true,
                    "containerized": true,
                    "baseImage": "node:18-alpine"
                }
            },
            "cicdSecurity": {
                "secretScanning": true,
                "dependencyReview": true,
                "codeScanning": true,
                "containerScanning": true,
                "permissions": {
                    "contents": "read",
                    "security-events": "write",
                    "actions": "read"
                }
            }
        },
        "policies": {
            "updatePolicy": {
                "security": "immediate",
                "major": "manual-review",
                "minor": "automatic-after-testing",
                "patch": "automatic"
            },
            "incidentResponse": {
                "criticalVulnerability": {
                    "timeToAssess": "2 hours",
                    "timeToFix": "24 hours",
                    "escalationPath": [
                        "security-team",
                        "engineering-lead",
                        "cto"
                    ]
                },
                "supplyChainCompromise": {
                    "timeToAssess": "1 hour",
                    "timeToFix": "4 hours",
                    "actions": [
                        "isolate-affected-systems",
                        "rollback-deployment",
                        "notify-stakeholders"
                    ]
                }
            }
        },
        "monitoring": {
            "alerts": {
                "newVulnerabilities": true,
                "dependencyUpdates": true,
                "licenseChanges": true,
                "suspiciousActivity": true
            },
            "reporting": {
                "frequency": "weekly",
                "recipients": [
                    "security-team@company.com",
                    "engineering@company.com"
                ],
                "includeMetrics": true
            }
        }
    }
}